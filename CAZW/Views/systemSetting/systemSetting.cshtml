@{
    ViewBag.Title = "systemSetting";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CAZW设置中心</title>
    <link rel="stylesheet" href="css/css.css" />
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <!-- popper.min.js 用于弹窗、提示、下拉菜单 -->
    <script src="https://cdn.staticfile.org/popper.js/1.12.5/umd/popper.min.js"></script>
    <!-- 最新的 Bootstrap4 核心 JavaScript 文件 -->
    <script src="https://cdn.staticfile.org/twitter-bootstrap/4.1.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container" style="margin-top: 20px;">

        <!-- 确认模态框 -->
        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <!-- 模态框头部 -->
                    <div class="modal-header">
                        <h4 class="modal-title">设置更改提醒</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <!-- 模态框主体 -->
                    <div class="modal-body">
                        您正在修改CAZW设置，确认保存这些修改吗？
                    </div>
                    <!-- 模态框底部 -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">保存</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                    </div>
                </div>
            </div>
        </div>

        <h5>您位于CAZW设置中心</h5>
        <ul class="list-group">
            <li class="list-group-item">
                网站Log:<img style="width: 50px; height: 50px; margin-left: 20px; margin-right: 20px;" src="images/headimg.png" />
                <button type="button" class="btn btn-warning">更换Log</button>
            </li>
            <li class="list-group-item">更多设置正在努力开发中......</li>
            <li class="list-group-item">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                    修改保存
                </button>
            </li>
        </ul>
    </div>
</body>
</html>
